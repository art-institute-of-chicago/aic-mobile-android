<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.CustomToolbar.AudioTheme">
        <item name="colorPrimary">@color/grape</item>
        <item name="colorPrimaryDark">@color/grape</item>
        <item name="android:statusBarColor">@color/grape</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowBackground">@color/grape</item>
    </style>

    <style name="PageSubHeaderRegularWhite">
        <item name="android:fontFamily">@font/amiri_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NumberPadText">
        <item name="android:fontFamily">@font/ideal_sans_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/number_pad_text_size</item>
    </style>

    <dimen name="number_pad_text_size">26sp</dimen>
    <dimen name="number_pad_bg_size">66dp</dimen>

</resources>