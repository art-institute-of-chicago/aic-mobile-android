<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/language_spinner_background">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/text"
        style="@style/AudioTranslationSans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginDouble"
        android:fontFamily="@font/ideal_sans_medium"
        android:gravity="center_vertical|start"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:minWidth="63dp"
        android:minHeight="32dp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@id/caret"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_width="100dp"
        tools:text="this is very " />

    <ImageView
        android:id="@+id/caret"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/marginHalf"
        android:layout_marginEnd="@dimen/marginDouble"
        android:background="@drawable/ic_language_caret"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>